<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notificon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_notif" />

    <TextView
        android:id="@+id/notifmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/notiftitle"
        android:layout_below="@+id/notiftimestamp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="notif message"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/browser_actions_title_color"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/notiftimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/notiftitle"
        android:layout_below="@+id/notiftitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:text="notif timestamp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/browser_actions_title_color"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/notiftitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:text="notif title"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

</RelativeLayout>