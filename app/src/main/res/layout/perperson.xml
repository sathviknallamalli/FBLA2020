<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userperimage"
        android:layout_width="65dp"
        android:layout_height="65dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:background="@color/trans"
        android:scaleType="centerCrop"
        android:src="@drawable/defaultimg"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/messagelastseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/messagetitle"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:maxWidth="100dp"
        android:text="Wed"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/messagetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userperimage"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/userperimage"
        android:drawableEnd="@drawable/dot"
        android:drawablePadding="5dp"
        android:paddingBottom="0dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/messagebody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/messagetitle"
        android:layout_below="@+id/messagetitle"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="Start conversation"
        android:textColor="@color/greymessage"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userperimage"
        android:layout_below="@+id/userperimage"
        android:text="asfs"
        android:textColor="@color/black"
        android:textSize="8sp" />


</RelativeLayout>