<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/caleventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/caleventdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_alignStart="@+id/caleventname"
        android:layout_below="@+id/sendreminder"
        android:paddingBottom="8dp"
        android:text="this is dr arjun reddy deshmukh while people are talking about people with varma and sharma about the movie by triviktra"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sendreminder"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:layout_alignTop="@+id/caleventname"
        android:layout_marginEnd="17dp"
        android:text="Send reminder"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="12sp" />

</RelativeLayout>